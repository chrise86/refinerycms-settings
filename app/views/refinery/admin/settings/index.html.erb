<% content_for :subnav do %>
  <%= render 'actions' %>
<% end %>

<div id='records' class="ui segment">
  <%= render 'records' %>
</div>

<% content_for :javascripts do %>
  <script>
    $(document).ready(function() {
      $('#records ul li .actions a[href*=edit]').each(function(i, li) {
        $(li).attr('name', $(li).attr('tooltip'));
      });
    });
  </script>
<% end -%>
